<?xml version="1.0"?>
<phpunit colors="true">
    <testsuites>
        <testsuite name="AllTests">
            <directory>.</directory>
        </testsuite>
    </testsuites>
    <filter>
        <blacklist>
            <file>../src/Exception.php</file>
        </blacklist>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">../src</directory>
        </whitelist>
    </filter>
</phpunit>